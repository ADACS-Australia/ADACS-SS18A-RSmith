	bins, found_inj, ulA = get_combined_array("SearchvolumeFoundInjections"+bin_type,childNodeBase+4,files)
	bins, missed_inj, ulA = get_combined_array("SearchvolumeMissedInjections"+bin_type,childNodeBase+5,files)
