	# loop over all the filenames and masses and compute the posteriors separately
        ###############################################################################

	# track bins that contain any injections
	injection_space = numpy.zeros(found_inj[0].shape)
	injection_space[found_inj[0]+missed_inj[0] > 0] = 1
	mrange = [min(m for l,m in enumerate(bins.lower()[0]) if injection_space[l]),
		  max(m for l,m in enumerate(bins.upper()[0]) if injection_space[l])]

	for i, f in enumerate(files):

		legend_str = []
		lines = []

