#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no

my_lal_libs="-L@libdir@ -llal @GSL_LIBS@ @FFTW3_LIBS@"
my_lal_cflags="-I@includedir@ @GSL_CFLAGS@ @FFTW3_CFLAGS@"
usage()
{
    cat <<EOF
Usage: lal-config [OPTIONS] [LIBRARIES]
Options:
        [--prefix[=DIR]]
        [--exec-prefix[=DIR]]
        [--version]
        [--libs]
        [--cflags]
Libraries:
        lal
        lalsupport
EOF
    exit $1
}

if test $# -eq 0; then
  usage 1 1>&2
fi

while test $# -gt 0; do
  case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
  esac

  case "$1" in
    --prefix=*)
        prefix=$optarg
        if test $exec_prefix_set = no ; then
          exec_prefix=$optarg
        fi
        ;;
    --prefix)
        echo $prefix
        ;;
    --exec-prefix=*)
        exec_prefix=$optarg
        exec_prefix_set=yes
        ;;
    --exec-prefix)
        echo $exec_prefix
        ;;
    --version)
        echo @VERSION@
        exit 0
        ;;
    --cflags)
        echo_cflags=yes
        ;;
    --libs)
        echo_libs=yes
        ;;
    lal)
        lib_lal=yes
        ;;
    lalsupport)
        lib_lalsupport=yes
        ;;
    --help)
        usage 0
        ;;
    *)
        usage 1 1>&2
        exit 1
        ;;
  esac
  shift
done

if test "$echo_prefix" = "yes"; then
  echo $prefix
fi

if test "$echo_exec_prefix" = "yes"; then
  echo $exec_prefix
fi

if test "$lib_lalsupport" = "yes"; then
  my_lal_libs="-L@libdir@ -llalsupport @LALSUPPORT_LIBADD@ $my_lal_libs"
  my_lal_cflags="$my_lal_cflags"
fi

if test "$echo_libs" = "yes"; then
  echo $my_lal_libs
fi

if test "$echo_cflags" = "yes"; then
  echo $my_lal_cflags
fi

exit 0
