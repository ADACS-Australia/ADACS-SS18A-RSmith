#!/bin/sh
if test -d "$LAL_FRAME_PATH"; then
        rm -f lamhosts
        rm -f FindChirpSchema

        echo `hostname` >  lamhosts
        echo 'FindChirpMain h' > FindChirpSchema
        echo 'FindChirpMain h' >> FindChirpSchema
        echo 'FindChirpMain h' >> FindChirpSchema

        lamboot -v lamhosts

        mpirun -v FindChirpSchema

        wipe -v lamhosts
else
        echo "Warning: LAL_FRAME_PATH is not set"
        exit 77
fi
