#!/bin/sh

fail=
rm -f machines
cat > machines <<EOF
`hostname`
`hostname`
`hostname`
`hostname`
`hostname`
EOF

if mpiexec -machinefile machines -np 5 SendRecvTest
then
 echo "PASS: SendRecvTest"
else
 echo "FAIL: SendRecvTest"
 fail=yes
fi

sleep 15
if mpiexec -machinefile machines -np 5 ExchangeTest
then
 echo "PASS: ExchangeTest"
else
 echo "FAIL: ExchangeTest"
 fail=yes
fi

test -z "$fail"
