/outarrowarc { % Draws a clockwise arc with an arrow on the outside
gsave 0 setlinecap 0 setlinejoin newpath
5 3 roll translate dup rotate sub
0 0 0 5 2 roll arc
currentlinewidth dup -2 mul rlineto
currentlinewidth -1 mul 0 rlineto
stroke grestore
} def

/inarrowarc { % Draws a clockwise arc with an arrow on the inside
gsave 0 setlinecap 0 setlinejoin newpath
5 3 roll translate dup rotate sub
0 0 0 5 2 roll arc
currentlinewidth -1 mul dup 2 mul rlineto
currentlinewidth 0 rlineto
stroke grestore
} def

/inarrowarcn { % Draws a counterclockwise arc with an arrow on the inside
gsave 0 setlinecap 0 setlinejoin newpath
5 3 roll translate dup rotate sub
0 0 0 5 2 roll arcn
currentlinewidth -1 mul dup -2 mul rlineto
currentlinewidth 0 rlineto
stroke grestore
} def

/arrowcyl { % Draws an arrow projected onto a vertical cylinder
gsave newpath 5 copy
5 3 roll currentlinewidth 0.5 mul add 5 2 roll arc
0 currentlinewidth rlineto
dup dup sin -3 mul currentlinewidth mul
exch cos 3 mul 1.5 sub currentlinewidth mul rlineto
dup dup sin 3 mul currentlinewidth mul
exch cos -3 mul 1.5 sub currentlinewidth mul rlineto
0 currentlinewidth rlineto
5 3 roll currentlinewidth 0.5 mul sub 5 2 roll exch arcn
0 currentlinewidth rlineto closepath fill grestore
} def

/shear { % Draws arrows indicating tidal shear.  Takes two arguments:
% a vertical offset, and a rotation angle.
gsave exch 0 exch translate 1 0.389418 scale rotate
120 120 112 180 270 inarrowarc
-120 120 112 360 270 inarrowarcn
-120 -120 112 0 90 inarrowarc
120 -120 112 180 90 inarrowarcn
grestore
} def

