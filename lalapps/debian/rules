#!/usr/bin/make -f
%:
	dh $@ --with=python2

override_dh_auto_configure:
	PKG_CONFIG_PATH="" \
	./configure \
	    --disable-silent-rules \
	    --prefix=/usr \
	    --sysconfdir=/etc \
	    --mandir=\$${prefix}/share/man --infodir=\$${prefix}/share/info \
	    --disable-debug \
	    --disable-gcc-flags

override_dh_auto_build:
	$(MAKE) V=1

override_dh_auto_test:
