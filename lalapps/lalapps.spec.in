%define _prefix /opt/lscsoft/lalapps
%define _mandir %{_prefix}/share/man
%define _sysconfdir %{_prefix}/etc
%define _pkgpythondir %{_prefix}/lib/python2.4/site-packages/@PACKAGE@
%define _pkgpyexecdir %{_libdir}/python2.4/site-packages/@PACKAGE@

Name: @PACKAGE@
Version: @VERSION@
Release: 1
Summary: LSC Algorithm Library Applications
License: GPL
Group: LAL
Source: %{name}-%{version}.tar.gz
URL: http://www.lsc-group.phys.uwm.edu/daswg/projects/lalapps.html
Packager: Duncan Brown <dbrown@ligo.caltech.edu>
BuildRoot: %{_tmppath}/%{name}-%{version}-root
BuildRequires: gsl-devel fftw3-devel libframe-devel libmetaio-devel lal-devel lalframe-devel lalmetaio-devel lalburst-devel lalinspiral-devel lalstochastic-devel lalpulsar-devel
Requires: gsl fftw3 fftw3-static libframe libmetaio lal lalframe lalmetaio lalburst lalinspiral lalstochastic lalpulsar python
Prefix: %{_prefix}

%description
The LSC Algorithm Library Applications for gravitational wave data analysis.
This package contains applications that are built on tools in the LSC
Algorithm Library.

%prep
%setup -q

%build
source /opt/lscsoft/lscsoft-user-env.sh
nightly_version=@NIGHTLY_VERSION@
%configure --enable-nightly=${nightly_version:-no} --disable-gcc-flags --disable-debug
%{__make} V=1

%install
%makeinstall

%post
ldconfig

%postun
ldconfig

%clean
[ ${RPM_BUILD_ROOT} != "/" ] && rm -Rf ${RPM_BUILD_ROOT}
rm -Rf ${RPM_BUILD_DIR}/%{name}-%{version}

%files
%defattr(-,root,root)
%{_bindir}/*
%{_pkgpythondir}/*
%{_mandir}/man1/*
%{_datadir}/lalapps/*
%{_sysconfdir}/lalapps-user-env.*
