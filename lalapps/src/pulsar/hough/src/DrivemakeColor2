# -----------------------------------------------------------
# your compiler
CC = gcc

#CC = gcc -DTIMING
#CC = gcc -DPRINTHOUGH
#CC = gcc -DTIMING -DPRINTHOUGH
#CC = gcc -DCHECKHOUGHINDEX
# -----------------------------------------------------------
# header file directory
LAL_INCLUDE=/afs/aeiw/grawave/Linux/lal/correct/include/

# -----------------------------------------------------------
# libraries

LAL_LIB = /afs/aeiw/grawave/Linux/lal/lib

LLAL = lal
LALSUP = lalsupport

THELIBS = -l$(LALSUP) -l$(LLAL) -lm -L$(LAL_LIB)

#p=./timer/cycle_counter/Intel/GCC/
#m=../hough/objs_exe/

# ----------------------------------------------------------
# compiler options

CFLAGS =  -O2 -static -I$(LAL_INCLUDE) 
#CFLAGS =  -Wall -g -static -I$(LAL_INCLUDE) -I$p
# -----------------------------------------------------------
# default target
all: DriveHoughColor_v2

# -----------------------------------------------------------
#  produce object files


DriveHoughColor_v2.o: DriveHoughColor_v2.c DriveHoughColor.h
	$(CC) -c $(CFLAGS) DriveHoughColor_v2.c

# -----------------------------------------------------------
# link tests code
# -----------------------------------------------------------


DriveHoughColor_v2: SFTbin.o PeakSelect.o DriveHoughColor_v2.o  
	$(CC) $(CFLAGS) -o $@   SFTbin.o PeakSelect.o DriveHoughColor_v2.o $(THELIBS)


# -----------------------------------------------------------
# cleaning...
clean:
	rm -f  DriveHoughColor_v2.o DriveHoughColor_v2












