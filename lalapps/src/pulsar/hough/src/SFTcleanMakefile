# -----------------------------------------------------------


# -----------------------------------------------------------
# determine architecture
OSType=`uname`
hello=`date`

# -----------------------------------------------------------
# your compiler
CC = gcc

#CC = gcc -DCHECKHOUGHINDEX

# -----------------------------------------------------------
# header file directory
LAL_INCLUDE = /afs/aeiw/grawave/Linux/lal/correct/include/
GSL_INCLUDE = /usr/local/bin/gsl1.4/include
# -----------------------------------------------------------
# libraries

LAL_LIB = /afs/aeiw/grawave/Linux/lal/lib
GSL_LIB = /usr/local/bin/gsl1.4/lib

LLAL = lal
LALSUP = lalsupport
GSL = lgsl
GSLCBLAS = lgslcblas

THELIBS = -l$(LALSUP) -l$(LLAL) -lgsl -lgslcblas -lm -L$(LAL_LIB) -L$(GSL_LIB)

# ----------------------------------------------------------
# compiler options

#CFLAGS = -Wall -static -I$(LAL_INCLUDE) -I$(GSL_INCLUDE)
CFLAGS = -Wall -g -static -I$(LAL_INCLUDE) -I$(GSL_INCLUDE)

# -----------------------------------------------------------
# default target
all: SFTclean

# -----------------------------------------------------------
#  produce object files

SFTbin.o: SFTbin.c SFTbin.h 
	$(CC) -c $(CFLAGS)  SFTbin.c


SFTclean.o: SFTclean.c SFTbin.h 
	$(CC) -c $(CFLAGS) SFTclean.c

# -----------------------------------------------------------
# link tests code
# -----------------------------------------------------------

SFTclean: SFTbin.o SFTclean.o
	$(CC) $(CFLAGS) -o $@ SFTbin.o SFTclean.o $(THELIBS)

# -----------------------------------------------------------
# cleaning...
clean:
	rm -f  SFTbin.o SFTclean.o SFTclean

# -----------------------------------------------------------

















