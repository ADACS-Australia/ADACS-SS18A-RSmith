#!/usr/bin/env python

from optparse import OptionParser

import glue.lars

from glue.lars.cli import commands

import sys

try:
    cmd = sys.argv[1]
except:
    cmd = None

if cmd in commands:
    commands[cmd].run(sys.argv[2:])
else:
    command_names = " | ".join([name for name in commands.keys()])
    print "Usage: %s (%s) [options] [args]" % (sys.argv[0], command_names)
    sys.exit(1)
